<%= stylesheet_link_tag 'style', 'https://fonts.googleapis.com/css?family=Open+Sans:400&subset=latin',
 media: 'all', 'data-turbolinks-track' => true %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PIX</title>
</head>
<body>
  <div class="form">
    <div class="title">Welcome to PIX</div>
    <div class="subtitle">Let's Log in your account!</div>
    <%= button_to "Go to Registry", "/registration", class: "lgin", method: :get %>
<%= form_with url: login_path do |form|%>
    <div class="input-container ic2">
      <%=form.email_field :email,class: 'input', id: 'email',  placeholder: " " %>
      <div class="cut cut-short"></div>
      <label for="email" class="placeholder">Email</label>
    </div>
    <%#<div class="input-container ic2">
      
      <%=form.password_field :password, class: 'input', id: 'password', placeholder: " " %>
      <%#<div class="cut"></div>
      <label for="password" class="placeholder">Password</label>
     </div> %>
    <div class="input-container ic2">
      <div data-controller="password-visibility" style="height: 100%">
        <%=form.password_field :password, class: 'input', id: 'password', placeholder: " ", data: {"password-visibility-target" =>"input"}, spellcheck:"false" %>
        <div class="cut"></div>
        <label for="password" class="placeholder">Password</label>
        <button type="button" data-action="password-visibility#toggle" class="absolute right-0 top-0 mt-3 mr-2">
          <span data-password-visibility-target="icon"><span class="material-icons text-gray-300">visibility</span></span>
          <span data-password-visibility-target="icon" class="hidden"><span class="material-icons text-gray-300">visibility_off</span></span>
        </button>
      </div>
    <%# button_to "Login", "/login", class: "submit", method: :get %>
    <%= form.submit "Log In", class: "submit"%>
  </div>
<% end -%>
</div>
</body>
</html>