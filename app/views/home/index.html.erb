<%= stylesheet_link_tag 'account_style', media: 'all', 'data-turbolinks-track' => true %>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/account_style.css">
	<title>PIX</title>
</head>
<body>
	<div class="back-to-top-container back-to-top-container--intersecting" data-controller="viewport-entrance-toggle" data-viewport-entrance-toggle-class="back-to-top-container--intersecting">
  <button class="back-to-top__button button" onclick="window.scrollTo({ top: 0, behavior: 'smooth' })">Back to top</button>
</div>
</div>
	<header class="page_header">
		<navigation class="page_navigation">
			<div class="navigation_container_left">
			<%= button_to "PIX", "/feed", class: "logo", method: :get%>
			
				<%= button_to "", "/upload", class: "new_post_button", method: :get%>
			</div>
			<div class="navigation_container_center">
			<input class="search_bar" type="text" placeholder="ok, guys, i guess that's it!">
			</div>
			<div class="navigation_container_right">
				<%= button_to "Logout", logout_path, method: :delete %>
				<p class="small_nick"><%if @user%>
				<%= @user.nickname%>
				<% end %></p>
				<%=image_tag("account_images/avatar.png", class: 'small_avatar')%>
			</div>
		</navigation>
		<div class="profilecover">
			<div class="user"><%=image_tag("account_images/avatar.png", class: 'big_avatar')%>
			 <p class="nick"><%if @user%>
				<%= @user.nickname%>
				<% end %></p>
				</div>
			
			<div class="links">
				<%= link_to "Posts", "/posts", class: "lnks" %>
				<%= link_to "Favorites", "/favorites", class: "lnks" %>
				<%= link_to "Comments", "/comments", class: "lnks" %>
				<%= link_to "About", "/about", class: "lnks" %>
			</div>
		</div>
		
	</header>
	<section class="main_content">
		<%@pictures.each do |picture|%>
			<div class="post">
				<%= image_tag  picture.image, class: "post_image" %>
				<div class="post_info">
					<span class="post_description">
						<%= picture.description %>
					</span>
				</div>
			</div>
	<%end%>
	</section>
</body>
</html>