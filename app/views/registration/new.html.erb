<%= stylesheet_link_tag 'style', media: 'all', 'data-turbolinks-track' => true %>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>PIX</title>
</head>
<body>
  
<div class="form">
    <div class="title">Welcome to PIX</div>
    <div class="subtitle">Let's create your account!</div>
    <%= button_to "Go to login", "/login", class: "lgin", method: :get %>
  <%= form_tag('/registration') do -%>
  
    <div class="input-container ic1 ">
      <%# <input id="username" class="input" type="text" placeholder=" " /> %>
      <%=text_field_tag 'user[nickname]', nil, class: 'input', id: 'username', placeholder: " " %>
      <div class="cut"></div>
      <label for="username" class="placeholder">Username</label>
    </div>
    <div class="input-container ic2">
      <%# <input id="email" class="input" type="email" placeholder=" " /> %>
      <%=email_field_tag 'user[email]', nil, class: 'input', id: 'email',  placeholder: " " %>
      <div class="cut cut-short"></div>
      <label for="email" class="placeholder">Email</label>
    </div>
    
    <div class="input-container ic2">
      <div data-controller="password-visibility" style="height: 100%">
        <%=password_field_tag 'user[password]', nil, class: 'input', id: 'password', placeholder: " ", data: {"password-visibility-target" =>"input"}, spellcheck:"false" %>
        <div class="cut"></div>
        <label for="password" class="placeholder">Password</label>
        <button type="button" data-action="password-visibility#toggle" class="absolute right-0 top-0 mt-3 mr-2">
          <span data-password-visibility-target="icon"><span class="material-icons text-gray-300">visibility</span></span>
          <span data-password-visibility-target="icon" class="hidden"><span class="material-icons text-gray-300">visibility_off</span></span>
        </button>
      </div>
    </div>
    <%# <div class="show_pass"><input type="checkbox" data-action="showpass#show"> Show Password</div> %>
    <%# <div class="show_pass"><button data-action="showpass#show"> Show Password</div> %>
    
    
    <%= button_to "Registry", "/registration", class: "submit", method: :post %>
    
<% end -%>
 </div>
  </body>
