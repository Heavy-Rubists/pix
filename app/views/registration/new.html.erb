
<%= stylesheet_link_tag 'style', 'https://fonts.googleapis.com/css?family=Open+Sans:400&subset=latin',
 media: 'all', 'data-turbolinks-track' => true %>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>PIX</title>
</head>
<body>
<%= form_tag('/registration') do -%>
<div class="form">
    <div class="title">Welcome to PIX</div>
    <div class="subtitle">Let's create your account!</div>
    <div class="input-container ic1 ">
      <input id="username" class="input" type="text" placeholder=" " />
      <%=text_field_tag 'user[nickname]'%>
      <div class="cut"></div>
      <label for="username" class="placeholder">Username</label>
    </div>
    <div class="input-container ic2">
      <input id="email" class="input" type="email" placeholder=" " />
      <%=text_field_tag 'user[email]'%>
      <div class="cut cut-short"></div>
      <label for="email" class="placeholder">Email</label>
    </div>
    <div class="input-container ic2">
      <input id="password" class="input" type="password" placeholder=" " />
      <%=text_field_tag 'user[password]'%>
      <div class="cut"></div>
      <label for="password" class="placeholder">Password</label>
    </div>
    <input type="checkbox" onclick="myFunction()"> Show Password
    <script>
    function myFunction() {
    var x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
    </script>
    <%= button_to "Registry", "/registration", class: "submit", method: :post %>
  </div>
<% end -%>
  </body>
